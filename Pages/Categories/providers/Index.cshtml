@page
@model SupermarketWEB.Pages.Providers.IndexModel

<h1>Providers</h1>
<a asp-page="./Create" class="btn btn-success">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Providers)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>@item.PhoneNumber</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
